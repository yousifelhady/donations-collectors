    "version": "0.2.0",
    "configurations": [
        // Debug Typescript app directly using ts-node
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TS app (ts-node)",
            "program": "${workspaceFolder}/src/main.ts",
            "runtimeArgs": ["-r", "ts-node/register"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
    ]
}